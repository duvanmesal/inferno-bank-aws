# =============================================================================
# CARD SERVICE - Variables de Entorno
# =============================================================================

# Región de AWS donde se desplegarán los recursos
AWS_REGION=us-east-1

# Nombre de la tabla DynamoDB para usuarios
# Se consulta para verificar que el usuario existe al crear tarjetas
USERS_TABLE_NAME=inferno-users

# Nombre de la tabla DynamoDB para tarjetas
# Almacena: cardId, userId, cardType (DEBIT/CREDIT), cardNumber (encriptado),
# status (PENDING/ACTIVE/INACTIVE), balance, creditLimit, availableCredit
CARDS_TABLE_NAME=inferno-cards

# Nombre de la tabla DynamoDB para transacciones
# Almacena: transactionId, cardId, userId, type, amount, description, timestamp
TRANSACTIONS_TABLE_NAME=inferno-transactions

# Nombre de la tabla DynamoDB para solicitudes de tarjetas
# Registra las solicitudes de tarjetas de crédito para el proceso de aprobación
CARD_REQUESTS_TABLE_NAME=inferno-card-requests

# Nombre de la tabla DynamoDB para activaciones de tarjetas de crédito
# Contador de transacciones de débito para validar activación (requiere 10)
CARD_ACTIVATIONS_TABLE_NAME=inferno-card-activations

# Nombre de la tabla DynamoDB para notificaciones
# Registra las notificaciones enviadas relacionadas con tarjetas
NOTIFICATIONS_TABLE_NAME=inferno-notifications

# URL de la cola SQS para solicitudes de aprobación de tarjetas
# Las solicitudes de crédito se encolan aquí para aprobación asíncrona
CARD_APPROVAL_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/inferno-card-approval-queue

# URL de la cola SQS para enviar notificaciones
# Envía notificaciones de tarjetas aprobadas/rechazadas, transacciones, etc.
NOTIFICATIONS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/inferno-notifications-queue

# Nombre del bucket S3 para almacenar reportes generados
# Los reportes se guardan como: reports/{userId}/{reportId}.{csv|html}
REPORTS_BUCKET_NAME=inferno-reports-bucket

# Tiempo de expiración de las URLs firmadas de S3 (en segundos)
# Determina cuánto tiempo el usuario puede acceder al reporte descargable
PRESIGNED_URL_EXPIRATION=3600

# Balance inicial para tarjetas de débito recién creadas
INITIAL_DEBIT_BALANCE=0

# Límite de crédito inicial para tarjetas de crédito aprobadas
INITIAL_CREDIT_LIMIT=5000

# Porcentaje de cashback para transacciones de ahorro (0.2 = 20%)
SAVINGS_CASHBACK_PERCENTAGE=0.2

# Número mínimo de transacciones de débito requeridas para activar crédito
MIN_TRANSACTIONS_FOR_CREDIT_ACTIVATION=10
